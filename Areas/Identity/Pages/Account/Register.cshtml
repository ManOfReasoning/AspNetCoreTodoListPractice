@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    <link rel = "stylesheet" href = "~/css/register.css" asp-append-version = "true"/>
}

<div class="register">
    <p>Create a new account.</p>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="my-form-group">
            <label id = "0" asp-for="Input.UserName"></label>
            <input class = "input" asp-for="Input.UserName" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="my-form-group">
            <label id = "1" asp-for="Input.Email"></label>
            <input class = "input" asp-for="Input.Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="my-form-group">
            <label id = "2" asp-for="Input.Password"></label>
            <input class = "input" asp-for="Input.Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="my-form-group">
            <label id = "3" asp-for="Input.ConfirmPassword"></label>
            <input class = "input" asp-for="Input.ConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn">Register</button>
    </form>
</div>

<script src = "~/js/form.js" asp-append-version = "true"></script>
